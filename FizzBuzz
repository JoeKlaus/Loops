namespace FizzBuzz
{
// Write a C# program (probably all in Main) that prints out the numbers from 1 to 100, each one on a separate line. 
// In addition, for every number that is divisible by 3, next to the number, print out the word "Fizz". 
// In addition, for every number that is divisible by 5, next to the number, print out the word "Buzz". 
// If a number is divisible by both 3 and 5, next to the number, print out the words "Fizz Buzz".

    class Program
    {
        static void Main(string[] args)
        {
            int i;

            for (i = 1; i <= 100; i++)
            {
                if (i % 3 == 0 && i % 5 == 0)
                {
                    Console.WriteLine(i + " Fizz Buzz");
                }
                else if (i % 3 == 0)
                {
                    Console.WriteLine(i + " Fizz");
                }
                else if (i % 5 == 0)
                {
                    Console.WriteLine(i + " Buzz");
                }
                
                else
                {
                    Console.WriteLine(i);
                }
            }
        }
    }
}
